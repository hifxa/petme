<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="18dp"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:orientation="horizontal">

        <TextView
            android:id = "@+id/heading"
            style = "@style/Headline5"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "16dp"
            android:layout_weight = "1"
            android:text = "Adoption Advertisement"
            android:textColor = "@color/onBackground" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/card_round_16"
            android:backgroundTint="@color/surface"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            app:tint="@color/primary" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        style = "@style/cardStyle"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius = "100dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:src = "@drawable/pet" />

    </com.google.android.material.card.MaterialCardView >

    <com.google.android.material.textfield.TextInputLayout
        style = "@style/inputBoxOutline"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "16dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" >

        <com.google.android.material.textfield.TextInputEditText
            android:id = "@+id/pet_name"
            style = "@style/inputBoxOutline"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "Pet Name"
            android:inputType = "textPersonName" />

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.textfield.TextInputLayout
        style = "@style/inputBoxOutline"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "16dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" >

        <com.google.android.material.textfield.TextInputEditText
            android:id = "@+id/pet_breed"
            style = "@style/inputBoxOutline"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "Breed"
            android:inputType = "textPersonName" />

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.textfield.TextInputLayout
        style = "@style/inputBoxOutline"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "16dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" >

        <com.google.android.material.textfield.TextInputEditText
            android:id = "@+id/age"
            style = "@style/inputBoxOutline"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "Age"
            android:inputType = "textPersonName" />

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.textfield.TextInputLayout
        style = "@style/inputBoxOutline"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "16dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" >

        <com.google.android.material.textfield.TextInputEditText
            android:id = "@+id/misc_details"
            style = "@style/inputBoxOutline"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "Other details like birthday, vaccination details, food preferences, etc."
            android:inputType = "textMultiLine"
            android:gravity="top"
            android:minLines="4"
            android:maxLines="8"/>

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.textfield.TextInputLayout
        style = "@style/inputBoxOutline"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "16dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" >

        <com.google.android.material.textfield.TextInputEditText
            android:id = "@+id/contact_info"
            style = "@style/inputBoxOutline"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "Contact Info (Phone number, name, address)"
            android:inputType = "textMultiLine"
            android:minLines="3"
            android:maxLines="6"
            android:gravity="top"
            />

    </com.google.android.material.textfield.TextInputLayout >

    <com.google.android.material.button.MaterialButton
        android:id = "@+id/addAdoptionAdv"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "18dp"
        android:padding = "18dp"
        android:text = "Post Advertisement"
        android:textAppearance = "@style/Button"
        android:textColor = "@color/white"
        android:textStyle = "bold"
        app:cornerRadius = "32dp" />

</LinearLayout>