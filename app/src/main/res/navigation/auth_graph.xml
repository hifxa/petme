<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/loginTabFragment">

    <fragment
        android:id="@+id/loginTabFragment"
        android:name="com.example.petme.view.auth.LoginTabFragment"
        tools:layout="@layout/login_tab_fragment"
        android:label="LoginTabFragment" >
        <action
            android:id="@+id/goToSignUp"
            app:destination="@id/signupTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupTabFragment"
        android:name="com.example.petme.view.auth.SignupTabFragment"
        tools:layout="@layout/signup_tab_fragment"
        android:label="SignupTabFragment" />
</navigation>